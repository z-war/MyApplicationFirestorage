<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Testing Data"
      android:layout_centerInParent="true"
      android:onClick="adduser"
      />
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/movetouploadbtn"
      android:text="Move to Upload"
      android:onClick="toupload"
      android:layout_margin="10dp"
      />
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/movetodownloadbtn"
    android:text="Move To Download"
      android:layout_margin="10dp"
      android:layout_below="@id/movetouploadbtn"/>

</RelativeLayout>